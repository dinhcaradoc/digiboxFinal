<!--This page provides the interface for the registration page-->

<div class="container">

  <div class="card o-hidden border-0 shadow-lg my-4">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row" style="background-color: gold;">
        <div class="col-lg-1" style="background-color: black;">

        </div>
        <div class="col-lg-2">

        </div>
        <div class="col-lg-8">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h2 text-gray-900 mb-5">Jisajili Hapa!</h1>
            </div>
            <hr>


            <form action="/register" method="post">
              <div class="form-group row">
                <div class="col-sm-3 mb-3 mb-sm-0">
                  <label for="name">Name:</label>
                </div>
                <div class="col-sm-4 mb-3 mb-sm-0">
                  <input type="text" class="form-control form-control-user" id="firstName" name="firstName"
                    placeholder="First Name" required>
                </div>
                <div class="col-sm-4 mb-3 mb-sm-0">
                  <input type="text" class="form-control form-control-user" id="lastName" name="lastName"
                    placeholder="Last Name" required>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-sm-3 mb-3 mb-sm-0">
                  <label for="phone">Phone Number: </label>
                </div>
                <div class="col-sm-8 mb-3 mb-sm-0">
                  <input type="number" class="form-control form-control-user" id="phone" name="phone"
                    placeholder="Enter phone number" required>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-sm-3 mb-3 mb-sm-0">
                  <label for="password">Password: </label>
                </div>
                <div class="col-sm-8 mb-3 mb-sm-0">
                  <input type="password" class="form-control form-control-user" id="password" name="password"
                    placeholder="Password" required>
                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-user">Create Account</button>
              </div>
            </form>


            <% if (message) { %>
              <div class="text-center bg-light">
                <div class="shadow-sm alert-warning my-4">
                  <%= message %>
                </div>
              </div>
              <% } %>

